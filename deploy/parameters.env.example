# Example parameters file for OpenShift template
# Copy this file to parameters.env and update the values

# Container Image Configuration
IMAGE=your-registry.example.com/clementine
IMAGE_TAG=latest
APP_NAME=clementine

# Required Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# Required Tangerine API Configuration
TANGERINE_API_URL=https://your-tangerine-api.example.com
TANGERINE_API_TOKEN=your-tangerine-api-token-here

# Optional Configuration (uncomment and modify as needed)
# LOG_LEVEL=DEBUG
# BOT_NAME=MyBot
# ASSISTANT_LIST=konflux,other-assistant
# TANGERINE_API_TIMEOUT=600
# MODEL_OVERRIDE=chatgpt-4o
# AI_DISCLOSURE_ENABLED=true
# FEEDBACK_ENABLED=true
# SLACK_MIN_CONTEXT=50
# SLACK_MAX_CONTEXT=250

# Resource Configuration
# MEMORY_LIMIT=1Gi
# MEMORY_REQUEST=512Mi
# CPU_LIMIT=1000m
# CPU_REQUEST=200m
# STORAGE_SIZE=2Gi
