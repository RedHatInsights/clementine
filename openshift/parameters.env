# OpenShift Template Parameters for Clementine Slack Bot
# Copy this file and modify values for your environment

# Application Configuration
APP_NAME=clementine-slack-bot
NAMESPACE=my-project

# Image Configuration  
IMAGE_REGISTRY=image-registry.openshift-image-registry.svc:5000
IMAGE_TAG=latest

# Slack Configuration (REQUIRED - Your vault system will fill these)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# Tangerine API Configuration (REQUIRED - Your vault system will fill these)  
TANGERINE_API_URL=https://your-tangerine-api.com
TANGERINE_API_TOKEN=your-api-token-here

# Bot Configuration
BOT_NAME=Clementine
ASSISTANT_LIST=konflux
DEFAULT_PROMPT=You are a helpful assistant.
LOG_LEVEL=INFO
TANGERINE_API_TIMEOUT=500

# Feature Flags
AI_DISCLOSURE_ENABLED=true
AI_DISCLOSURE_TEXT=This response was generated by AI. Please verify important information.
FEEDBACK_ENABLED=true

# Resource Configuration
CPU_REQUEST=100m
CPU_LIMIT=500m
MEMORY_REQUEST=256Mi
MEMORY_LIMIT=512Mi

# Storage Configuration
DATA_STORAGE_SIZE=1Gi 